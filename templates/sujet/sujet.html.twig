{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Créer un sujet d'article{% endblock %}

{% block body %}

		<h1 class="text-center text-primary">Contrôle des sujets d'article</h1>
		
		<div class="container p-4">
			{{form_start(form)}}

			{{form_label(form.libelle, 'Ajouter un sujet d\'article', {'label_attr':{'class':'fw-bold text-light'}})}}
			{{form_widget(form.libelle, {'attr':{'class':'form-control text-light', 'placeholder':'Sujet d\'article'}})}}

			{{form_widget(form.bouton, {'label':"Ajouter", 'attr':{'class':'btn btn-outline-primary mt-3 justify-content-center'}})}}
			{{form_end(form, {render_rest: true})}} 
		</div>


    	<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-dark p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr class="fw-bold text-primary">
                                <th scope="col">ID</th>
								<th scope="col">Libellé</th>
							</tr>
						</thead>
						<tbody>
							{% for sujet in sujets %}
								<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                    <td>{{ sujet.id }}</td>
									<td>{{ sujet.libelle }}</td>
                                    <td>
                                        <a href="{{path('app_create_sujet', {'id':sujet.id})}}">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                            </svg>
                                        </a>
                                    </td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
{% endblock %}
