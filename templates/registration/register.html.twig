{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}S'inscrire{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-primary text-center"><u>S'inscrire</u></h1>
    
    <div class="container mt-4">

    {{ form_start(registrationForm) }}
        {{ form_label(registrationForm.email, 'Votre adresse-mail', {'label_attr':{'class':'fw-bold text-light'}})}}
        {{ form_widget(registrationForm.email, {'attr':{'class':'form-control text-light', 'placeholder':'Votre adresse-mail', 'type':'email'}}) }}

        {{ form_label(registrationForm.plainPassword, 'Votre mot de passe', {'label_attr':{'class':'fw-bold text-light'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr':{'class':'form-control text-light', 'placeholder':'Votre mot de passe', 'type':'password'}}) }}

        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes', {'label_attr':{'class':'fw-bold text-light'}}) }}
        {{ form_widget(registrationForm.agreeTerms) }}

        <br/><button type="submit" class="btn bg-primary mt-3 justify-content-center">S'inscrire</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
